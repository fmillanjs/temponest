# ===========================================
# TempoNest Environment Variables
# ===========================================

# -----------------------
# Application
# -----------------------
NODE_ENV=development
APP_NAME=TempoNest
APP_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# -----------------------
# Database (PostgreSQL)
# -----------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/temponest

# -----------------------
# Redis
# -----------------------
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=

# -----------------------
# Better Auth
# -----------------------
BETTER_AUTH_SECRET=change-this-to-a-random-secret-min-32-chars
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUST_HOST=true

# -----------------------
# Stripe
# -----------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------
# Resend (Email)
# -----------------------
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@temponest.com
RESEND_FROM_NAME=TempoNest

# -----------------------
# hCaptcha
# -----------------------
HCAPTCHA_SECRET_KEY=0x...
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=...

# -----------------------
# Plausible Analytics
# -----------------------
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=temponest.com
NEXT_PUBLIC_PLAUSIBLE_API_HOST=http://localhost:8000

# Plausible Self-Hosted Config
PLAUSIBLE_ADMIN_USER_EMAIL=admin@temponest.com
PLAUSIBLE_ADMIN_USER_NAME=Admin
PLAUSIBLE_ADMIN_USER_PWD=change-me
PLAUSIBLE_BASE_URL=http://localhost:8000
PLAUSIBLE_SECRET_KEY_BASE=generate-random-64-char-string
PLAUSIBLE_DATABASE_URL=postgresql://plausible:plausible@plausible-db:5432/plausible
PLAUSIBLE_CLICKHOUSE_DATABASE_URL=http://plausible-events:8123/plausible

# -----------------------
# GitHub Integration
# -----------------------
GITHUB_TOKEN=ghp_...
GITHUB_ORG=your-org
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------
# Coolify Integration
# -----------------------
COOLIFY_API_URL=https://coolify.example.com
COOLIFY_API_TOKEN=...
COOLIFY_PROJECT_ID=
COOLIFY_ENVIRONMENT_ID=
COOLIFY_DESTINATION_ID=

# -----------------------
# AWS S3 / MinIO (Optional)
# -----------------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=temponest
S3_REGION=us-east-1

# -----------------------
# Monitoring & Logging
# -----------------------
LOG_LEVEL=info
SENTRY_DSN=

# -----------------------
# Feature Flags
# -----------------------
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_2FA=false
